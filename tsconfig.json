{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "src",
        "paths": {
            "@core/*": ["app/core/*"],
            "@shared/*": ["app/shared/*"],
            "@management-state/*": ["app/management-state/*"],
            "@themes/*": ["app/themes/*"],
            "@env/*": ["environments/*"]
        },
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "module": "es2020",
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "es2015",
        "lib": ["es2018", "dom"]
    },
    "angularCompilerOptions": {
        "fullTemplateTypeCheck": true,
        "strictInjectionParameters": true
    }
}
